#!/bin/sh
#$ -j y
#$ -cwd
#$ -l h_rt=01:00:00
#$ -A fim
#$ -N run_gsi_hybrid
#$ -o run_gsi_hybrid.out
#$ -e run_gsi_hybrid.err
#$ -pe ncomp 128
#$ -S /bin/sh

VERBOSE=${VERBOSE:-"NO"}
if [[ "$VERBOSE" = "YES" ]]; then
   set -x
fi
 

# Set experiment name and analysis date
adate=$analdate
nens=$nanals

HXONLY=${HXONLY:-"NO"}

if [[ "$HXONLY" = "YES" ]]; then
    SKIP_ANGUPDATE=${SKIP_ANGUPDATE:-"YES"}
    lread_obs_save=${lread_obs_save:-.false.}
    lread_obs_skip=${lread_obs_skip:-.true.}
    CLEAN=${CLEAN:-"YES"}
else
    SKIP_ANGUPDATE=${SKIP_ANGUPDATE:-"NO"}
    lread_obs_save=${lread_obs_save:-.true.}
    lread_obs_skip=${lread_obs_skip:-.false.}
    CLEAN=${CLEAN:-"NO"}
fi
NPROCS=${nprocs:-$NSLOTS}



# Set path/file for gsi executable
basedir=/lfs1/projects/fim/whitaker/ncepsvn
gsipath=${gsipath:-$basedir/gsi}
gsiexec=$gsipath/src/global_gsi
angupdatexec=${basedir}/global_angupdate.fd/global_angupdate
charnanal=${charnanal:-'ensmean'}
# name just for diag files.
charnanal2=${charnanal2:-$charnanal}


# Set the JCAP resolution which you want.
# All resolutions use LEVS=64
export JCAP=${JCAP:-382}
export LEVS=${LEVS:-64}
export JCAP_B=$JCAP


# Set runtime and save directories
tmpdir=${tmpdir:-datapath2/gsitmp$$}
savdir=${savdir:-$datapath2}

SFCANL=${SFCANL:-$savdir/sfcanl.${adate}}
SIGANL=${SIGANL:-$savdir/siganl.${adate}}

# Specify GSI fixed field and data directories.
fixgsi=$gsipath/fix
fixcrtm=$fixgsi/crtm_gfsgsi
CYCLESH=${CYCLESH:-$gsipath/scripts/global_cyclep.sh}


# Set variables used in script
#   CLEAN up $tmpdir when finished (YES=remove, NO=leave alone)
#   ndate is a date manipulation utility
#   ndate is a date manipulation utility
#   ncp is cp replacement, currently keep as /bin/cp

ndate=/whome/whitaker/bin/ndate
ncp="/bin/cp -f"
nmv="/bin/mv -f"
nln="/bin/ln -fs"


# Given the requested resolution, set dependent resolution parameters
if [[ "$JCAP" = "382" ]]; then
   export LONA=784 
   export LATA=368
   export DELTIM=180
elif [[ "$JCAP" = "62" ]]; then
   export LONA:LONA=192
   export LATA=94
   export DELTIM=1200
elif [[ "$JCAP" = "126" ]]; then
   export LONA=384
   export LATA=190
   export DELTIM=600 
elif [[ "$JCAP" = "190" ]]; then
   export LONA=576
   export LATA=288
   export DELTIM=400 
else
   echo "INVALID JCAP = $JCAP"
   exit
fi
export NLAT=$((${LATA}+2))


# Given the analysis date, compute the date from which the
# first guess comes.  Extract cycle and set prefix and suffix
# for guess and observation data files
gdate=`$ndate -06 $adate`
hha=`echo $adate | cut -c9-10`
hhg=`echo $gdate | cut -c9-10`
RUN=${RUN:-gfs}
prefix_obs=${RUN}.t${hha}z
prefix_tbc=${RUN}.t${hhg}z
suffix=tm00.bufr_d

adate0=`echo $adate | cut -c1-8`
iy=`echo $adate | cut -c1-4`
im=`echo $adate | cut -c5-6`
id=`echo $adate | cut -c7-8`
ih=`echo $adate | cut -c9-10`
gdate0=`echo $gdate | cut -c1-8`
datobs=$obs_datapath/bufr_$adate
datges=$datapath2
datgesm1=$datapathm1



# go to $tmpdir
cd $tmpdir


# Make gsi namelist
SETUP="lread_obs_save=$lread_obs_save,lread_obs_skip=$lread_obs_skip"
if [[ "$HXONLY" = "YES" ]]; then
   SETUP="$SETUP,lwrtinc=.true.,l4dvar=.true.,lobserver=.true."
fi
GRIDOPTS=""
BKGVERR=""
ANBKGERR=""
JCOPTS=""
STRONGOPTS=""
OBSQC=""
OBSINPUT=""
SUPERRAD=""
SINGLEOB=""
LAGDATA=""
#      l_hyb_ens:  logical variable, if .true., then turn on hybrid ensemble option, default = .false. 
#      n_ens:      ensemble size, default = 0
#      beta1_inv:  value between 0 and 1, relative weight given to static background B, default = 1.0
#      s_ens_h:    horizontal localization correlation length (units of km), default = 2828.0
#      s_ens_v:    vertical localization correlation length (grid units), default = 30.0
#      generate_ens:  if .true., generate ensemble perturbations internally as random samples of background B.
#                       (used primarily for testing/debugging)
#                     if .false., read external ensemble perturbations (not active yet)
#      aniso_a_en: if .true., then allow anisotropic localization correlation (not active yet)
#      uv_hyb_ens: if .true., then ensemble perturbation wind stored as u,v
#                  if .false., ensemble perturbation wind stored as psi,chi.
#                   (this is useful for regional application, where there is ambiguity in how to
#                      define psi,chi from u,v)
if [[ $beta1_inv < 0.999 ]]; then
HYBRIDENSDATA="l_hyb_ens=.true.,n_ens=$nens,beta1_inv=$beta1_inv,s_ens_h=$s_ens_h,s_ens_v=$s_ens_v,generate_ens=.false.,uv_hyb_ens=.true.,jcap_ens=$JCAP,nlat_ens=$LATA,nlon_ens=$LONA,ANISO_A_EN=.false.,jcap_ens_test=$JCAP"
#HYBRIDENSDATA="l_hyb_ens=.true.,n_ens=$nens,beta1_inv=$beta1_inv,s_ens_h=$s_ens_h,s_ens_v=$s_ens_v,generate_ens=.false.,uv_hyb_ens=.true.,jcap_en=$JCAP"
else
HYBRIDENSDATA=""
fi

GRIDOPTS="JCAP_B=$JCAP_B"

##!   l4dvar=.false.,nhr_assimilation=6,nhr_obsbin=6,
##!   lsqrtb=.true.,lcongrad=.false.,ltlint=.true.,
##!   idmodel=.true.,lwrtinc=.false.,

cat << EOF > gsiparm.anl
 &SETUP
   miter=2,niter(1)=100,niter(2)=150,
   niter_no_qc(1)=50,niter_no_qc(2)=0,
   write_diag(1)=.true.,write_diag(2)=.false.,write_diag(3)=.true.,
   gencode=$IGEN,qoption=2,
   factqmin=0.000,factqmax=0.000,deltim=$DELTIM,
   ndat=63,npred=5,iguess=-1,
   oneobtest=.false.,retrieval=.false.,l_foto=.false.,
   use_pbl=.false.,print_diag_pcg=.true.,
   $SETUP
 /
 &GRIDOPTS
   JCAP=$JCAP,NLAT=$NLAT,NLON=$LONA,nsig=$LEVS,hybrid=.true.,
   regional=.false.,nlayers(63)=3,nlayers(64)=6,
   $GRIDOPTS
 /
 &BKGERR
   as=0.6,0.6,0.75,0.75,0.75,0.75,1.0,1.0
   vs=0.7,
   hzscl=1.7,0.8,0.5,
   hswgt=0.45,0.3,0.25,
   bw=0.0,norsp=4,
   bkgv_flowdep=.true.,bkgv_rewgtfct=1.5,
   tsfc_sdv(1)=3.0,tsfc_sdv(2)=3.0,
   $BKGVERR
 /
 &ANBKGERR
   anisotropic=.false.,
   $ANBKGERR
 /
 &JCOPTS
   $JCOPTS
 /
 &STRONGOPTS
   jcstrong=.true.,nstrong=1,nvmodes_keep=8,period_max=6.,period_width=1.5,
   jcstrong_option=2,baldiag_full=.true.,baldiag_inc=.true.,
   $STRONGOPTS
 /
 &OBSQC
   dfact=0.75,dfact1=3.0,noiqc=.true.,oberrflg=.false.,c_varqc=0.02,
   use_poq7=.true.,
   $OBSQC
 /
 &OBS_INPUT
   dmesh(1)=180.0,dmesh(2)=145.0,dmesh(3)=240.0,dmesh(4)=160.0,dmesh(5)=180.0,dmesh(6)=150.0,time_window_max=3.0,
