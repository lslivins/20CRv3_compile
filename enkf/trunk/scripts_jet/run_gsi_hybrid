$nln $datobs/${prefix_obs}.ssmis.${suffix}    ./ssmisbufr
$ncp /lfs1/projects/rtfim/tcvitals/tcvitals.${adate}.txt ./tcvitals

# Copy bias correction, atmospheric and surface files
GBIAS=${GBIAS:-$datgesm1/${prefix_tbc}.abias}
